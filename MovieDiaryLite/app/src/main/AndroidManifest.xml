<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviediarylite">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieDiaryLite">
        <activity android:name=".Activities.FavouritesActivity"></activity>
        <activity android:name=".Activities.ViewAllMoviesActivity" />
        <activity android:name=".Activities.AddMovieActivity" />
        <activity android:name=".Activities.TvSeriesFunctionsActivity" />
        <activity android:name=".Activities.MovieFunctionsActivity" />
        <activity
            android:name=".Activities.HomeActivity"
            android:label="Home" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>